# SharkSense V6 ‚Äì Dashboard Orbital con Voil√†

import pandas as pd
import geopandas as gpd
import plotly.express as px
import plotly.graph_objects as go
import ipywidgets as widgets
from IPython.display import display, HTML

# Cargar datos validados
df = pd.read_csv('modelo_orbital_validado.csv')

# Narrativa cient√≠fica
display(HTML("""
<h2>üåä SharkSense V6 ‚Äì Dashboard Orbital</h2>
<p><b>Orbital Predators ‚Äì NASA Space Apps Challenge 2025</b><br>
Simulaci√≥n validada de trayectorias migratorias en h√°bitats oce√°nicos reales.<br>
Modelo multivariable, filtrado ecol√≥gico y defensa cient√≠fica internacional.</p>
"""))

# Filtro por zona
zona_selector = widgets.Dropdown(
    options=df['zona'].unique(),
    description='Zona:',
    style={'description_width': 'initial'}
)
display(zona_selector)

# Filtro por intensidad
intensidad_slider = widgets.FloatSlider(
    value=1.0,
    min=0.0,
    max=df['√çndice orbital de intensidad de alimentaci√≥n'].max(),
    step=0.1,
    description='Intensidad m√≠nima:',
    style={'description_width': 'initial'}
)
display(intensidad_slider)

# Filtrado din√°mico
df_filtrado = df[
    (df['zona'] == zona_selector.value) &
    (df['√çndice orbital de intensidad de alimentaci√≥n'] >= intensidad_slider.value)
]

# Visualizaci√≥n 1: Histograma
fig_hist = px.histogram(df, x='√çndice orbital de intensidad de alimentaci√≥n',
                        nbins=30, color_discrete_sequence=['teal'],
                        title='Distribuci√≥n de Intensidad Orbital')
fig_hist.show()

# Visualizaci√≥n 2: Mapa de calor
fig_heat = px.scatter_geo(df_filtrado, lat='lat', lon='lon',
                          color='√çndice orbital de intensidad de alimentaci√≥n',
                          color_continuous_scale='Viridis',
                          title='Zonas v√°lidas de alimentaci√≥n orbital')
fig_heat.update_layout(geo=dict(projection_type='natural earth'))
fig_heat.show()

# Visualizaci√≥n 3: Trayectorias orbitales
fig_tray = go.Figure()
for i, (zona, grupo) in enumerate(df.groupby('zona')):
    fig_tray.add_trace(go.Scattergeo(
        lon=grupo['lon'], lat=grupo['lat'],
        mode='lines+markers',
        line=dict(width=2),
        marker=dict(size=4),
        name=f"Zona {i+1}"
    ))
fig_tray.update_layout(title='Trayectorias orbitales simuladas',
                       geo=dict(projection_type='natural earth',
                                showland=True, landcolor='rgb(230,230,230)',
                                showocean=True, oceancolor='rgb(200,230,255)'),
                       legend=dict(x=0.01, y=0.01, bgcolor='rgba(255,255,255,0.8)', bordercolor='black'))
fig_tray.show()

# Exportaci√≥n de CSV filtrado
df_filtrado.to_csv('sharksense_filtrado.csv', index=False)
display(HTML("<p><b>‚úÖ CSV filtrado generado:</b> sharksense_filtrado.csv</p>"))
